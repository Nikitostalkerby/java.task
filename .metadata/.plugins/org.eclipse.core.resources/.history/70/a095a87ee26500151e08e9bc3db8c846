package first.task;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

public class Program {

	public static void main(String[] args)
		throws IOException {
		
		System.out.println("Enter the line: ");
		
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		String line = br.readLine();
		char[] str = line.toLowerCase().toCharArray();
		Map dictionary = new HashMap();
		
		System.out.println("Your text is: ");
		
		for(int i = 0; i < str.length; i++) {
			System.out.print(str[i]);
		}
		
		System.out.println(" ");
		
		char[] C = {'a', 'e', 'i', 'o', 'u', 'y'};
		
		List<String> found = new ArrayList<String> ();
		
		System.out.println("Vowels: ");
		
		for(int i = 0; i < str.length; i++) {
			for(int k = 0; k < C.length; k++) {
				if(str[i] == C[k]) {
					if(dictionary.containsKey(str[i])) {
						Integer value = (Integer) dictionary.get(str[i]);
						dictionary.put(str[i], value + 1);
					}
					else {
						dictionary.put(str[i], 1);
					}
				}
			}
		}
		
		System.out.println(dictionary.get(1));
		
		/*for(char key: dictionary.keySet()) {
			System.out.println(key + ": " + dictionary.get(key));
		}*/
		
	}

}
